@model IEnumerable<AccountingBook.Models.ViewModels.AccountingViewModel>

<table class="table">
    <tr>
        <th>#</th>
        <th>類別</th>
        <th>日期</th>
        <th>金額</th>
        <th>備註</th>
    </tr>

    @{var seq = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @seq
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
        </tr>
        seq++;
    }
</table>
